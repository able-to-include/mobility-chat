<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/received_message_background"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/receivedChat_imgAvatar"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_person_pin_black_48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/receivedChat_lytPictos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
        </org.apmem.tools.layouts.FlowLayout>

        <TextView
            android:id="@+id/receivedChat_lblTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>